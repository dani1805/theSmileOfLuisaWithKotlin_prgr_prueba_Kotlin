<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9D8189"
    tools:context=".LoginActivity">

  <ImageView
      android:id="@+id/imgHeader"
      android:layout_width="170dp"
      android:layout_height="170dp"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo" />

  <TextView
      android:id="@+id/tvRegister"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="25dp"
      android:fontFamily="@font/baloo"
      android:text="Sign Up"
      android:textColor="#FFCAD4"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imgHeader" />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout"
      style="@null"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="15dp"
      android:layout_marginRight="15dp"
      android:background="#D8E2DC"
      android:padding="5dp"
      android:textColorHint="#FFCAD4"
      app:boxStrokeColor="#FFCAD4"
      app:endIconTint="#FFCAD4"
      app:hintAnimationEnabled="true"
      app:hintTextColor="#FFCAD4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvRegister"
      app:startIconTint="#FFCAD4">

    <EditText
        android:id="@+id/etName"
        style="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#D8E2DC"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHint="#FFCAD4"
        android:textCursorDrawable="@null" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout3"
      style="@null"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="15dp"
      android:layout_marginRight="15dp"
      android:background="#D8E2DC"
      android:padding="5dp"
      android:textColorHint="#FFCAD4"
      app:boxStrokeColor="#FFCAD4"
      app:endIconTint="#FFCAD4"
      app:hintAnimationEnabled="true"
      app:hintTextColor="#FFCAD4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
      app:passwordToggleEnabled="true"
      app:passwordToggleTint="#FFCAD4"
      app:startIconTint="#FFCAD4">

    <EditText
        android:id="@+id/etPasswd"
        style="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#D8E2DC"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#FFCAD4" />
  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/btnLogin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:background="#FFCAD4"
      android:padding="5dp"
      android:text="Iniciar sesión"
      app:backgroundTint="#FFCAD4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />

  <TextView
      android:id="@+id/tvHelp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="40dp"
      android:text="¿Necesitas ayuda?"
      android:textColor="#FFFFFF"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

  <Button
      android:id="@+id/btnCall"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="15dp"
      android:layout_marginRight="15dp"
      android:background="#FFCAD4"
      android:drawableLeft="@drawable/ic_baseline_local_phone_24"
      android:padding="5dp"
      android:text="LLámanos"
      app:backgroundTint="#FFCAD4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvHelp" />
</androidx.constraintlayout.widget.ConstraintLayout>